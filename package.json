{
  "name": "vercel-postgres-sveltekit",
  "repository": "https://github.com/vercel/examples.git",
  "license": "MIT",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "lint": "eslint --ext .js,.svelte,.ts src",
    "cssdev": "pnpx tailwindcss -i ./src/tailwind.css -o ./src/css/main.css -w"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/adapter-vercel": "^2.4.2",
    "@sveltejs/kit": "^1.5.0",
    "@tailwindcss/forms": "^0.5.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.56.0",
    "eslint-plugin-svelte": "^2.35.1",
    "postcss": "^8.4.23",
    "svelte": "^3.58.0",
    "svelte-check": "^3.0.1",
    "tailwindcss": "^3.3.2",
    "turbo": "^1.9.3",
    "typescript": "^5.0.0",
    "vite": "^4.2.0"
  },
  "type": "module",
  "dependencies": {
    "@lucia-auth/adapter-postgresql": "^2.0.2",
    "@vercel/postgres": "^0.1.3",
    "dotenv": "^16.0.3",
    "lucia": "^2.7.3",
    "ms": "^2.1.3",
    "nodemailer": "^6.9.13",
    "vercel": "^32.5.0",
    "winston": "^3.11.0",
    "ws": "^8.13.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:svelte/recommended"
    ],
    "plugins": [
      "svelte",
      "@typescript-eslint"
    ],
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ],
        "parserOptions": {
          "project": [
            "./.svelte-kit/tsconfig.json"
          ]
        }
      },
      {
        "files": [
          "*.svelte"
        ],
        "parser": "svelte-eslint-parser",
        "parserOptions": {
          "parser": "@typescript-eslint/parser"
        }
      }
    ],
    "rules": {
      "no-console": 2,
      "no-debugger": 2
    }
  }
}
